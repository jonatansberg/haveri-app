{
  "name": "haveri-monorepo",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "pnpm --filter @haveri/console dev",
    "build": "pnpm --filter @haveri/console build",
    "start": "pnpm --filter @haveri/console start",
    "preview": "pnpm --filter @haveri/console preview",
    "check": "pnpm --filter @haveri/console check",
    "lint": "pnpm --filter @haveri/console lint",
    "test": "pnpm --filter @haveri/console test",
    "verify": "pnpm --filter @haveri/console verify",
    "worker": "pnpm --filter @haveri/console worker",
    "db:migrate": "pnpm --filter @haveri/console db:migrate",
    "db:seed": "pnpm --filter @haveri/console db:seed",
    "teams:check": "pnpm --filter @haveri/integrations-teams check",
    "teams:build-package": "pnpm --filter @haveri/integrations-teams build-package",
    "teams:zip-package": "pnpm --filter @haveri/integrations-teams zip-package",
    "ops:check-residency": "pnpm --filter @haveri/console ops:check-residency",
    "ops:backup": "pnpm --filter @haveri/console ops:backup",
    "ops:followup-reminders": "pnpm --filter @haveri/console ops:followup-reminders",
    "web:dev": "pnpm --filter @haveri/web dev",
    "web:build": "pnpm --filter @haveri/web build",
    "web:preview": "pnpm --filter @haveri/web preview",
    "deploy:console": "fly deploy -c console/fly.toml",
    "deploy:web": "pnpm --filter @haveri/web deploy"
  }
}
