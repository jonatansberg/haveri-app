# ===================================================================
# Teams app package generation only (not required for runtime server)
# Used by: pnpm teams:check / pnpm teams:build-package
# ===================================================================

# Public HTTPS base URL where Haveri is reachable from Teams.
TEAMS_APP_BASE_URL=https://your-public-haveri-url.example.com

# App ID used in Teams manifest (GUID).
TEAMS_MANIFEST_APP_ID=

# Bot/App registration ID exposed in Teams bot section (GUID).
TEAMS_BOT_APP_ID=

# Manifest package version.
TEAMS_APP_PACKAGE_VERSION=1.0.0

# Optional comma-separated valid domains for manifest (hostnames only).
# Example: console.haveri.app,api.haveri.app
TEAMS_APP_VALID_DOMAINS=

# Teams app display metadata.
TEAMS_APP_NAME_SHORT=Haveri
TEAMS_APP_NAME_FULL=Haveri Incident Management
TEAMS_APP_DESCRIPTION_SHORT=Chat-native incident management for operations teams
TEAMS_APP_DESCRIPTION_LONG=Haveri captures incident activity directly from Teams and keeps a synchronized incident workflow.

# Developer metadata shown in Teams app details.
TEAMS_APP_DEVELOPER_NAME=Haveri
TEAMS_APP_DEVELOPER_WEBSITE_URL=https://your-public-haveri-url.example.com
TEAMS_APP_DEVELOPER_PRIVACY_URL=https://your-public-haveri-url.example.com/privacy
TEAMS_APP_DEVELOPER_TERMS_URL=https://your-public-haveri-url.example.com/terms

# Accent color used in manifest card metadata.
TEAMS_APP_ACCENT_COLOR=#0B6E4F
